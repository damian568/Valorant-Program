<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/quiz_gradient_background"
        tools:context=".fragments.quiz.weapons.FifthQuestionWeaponsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/xxxsmall_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_quest_5_maps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/xxsmall_margin_bot"
                android:gravity="center"
                android:text="@string/fifth_question_weapons"
                android:textColor="@color/text_color_quest_agents"
                android:textSize="@dimen/text_screen"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_margin"
                android:gravity="center"
                android:text="@string/explanation_of_quest_5_weapons"
                android:textColor="@color/text_color_explanation_agents"
                android:textSize="@dimen/text_size_xsmall" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_margin"
                android:gravity="center"
                android:text="@string/question_fifth_weapons"
                android:textColor="@color/text_color_explanation_agents"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageAstra"
                android:layout_width="150dp"
                android:layout_height="260dp"
                android:layout_gravity="center"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/astra"
                app:shapeAppearanceOverlay="@style/custom_image_killjoy"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtAnswer"
                enableError=""
                errorText=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/medium_margin"
                app:counterEnabled="true"
                app:counterMaxLength="7">

                <EditText
                    android:id="@+id/FifthAnswerWeapons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_edit_text"
                    android:gravity="center"
                    android:hint="@string/answer"
                    android:inputType="text"
                    android:maxLength="7"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/large_padding_left"
                    android:paddingTop="@dimen/xsmall_padding_top_bot"
                    android:paddingBottom="@dimen/xsmall_padding_top_bot" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/sendFifthAnswerWeapons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/large_margin"
                android:background="@drawable/custom_button"
                android:hint="@string/send_answer"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>