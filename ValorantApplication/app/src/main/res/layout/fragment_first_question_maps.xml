<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/quiz_gradient_background"
        tools:context=".fragments.quiz.maps.FirstQuestionMapsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/xxxsmall_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_quest_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/xxsmall_margin_bot"
                android:gravity="center"
                android:text="@string/first_question_maps"
                android:textColor="@color/text_color_quest_agents"
                android:textSize="@dimen/text_screen"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_margin"
                android:gravity="center"
                android:text="@string/explanation_of_quest_1_maps"
                android:textColor="@color/text_color_explanation_agents"
                android:textSize="@dimen/text_size_xsmall" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_margin"
                android:gravity="center"
                android:text="@string/question_one_maps"
                android:textColor="@color/text_color_explanation_agents"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/icebox">

                <RadioGroup
                    android:id="@+id/radioGroupPoints"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:weightSum="3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/btnRadioSnowman"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/no_dimen"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/btnRadioSide"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/no_dimen"
                        android:layout_marginLeft="55dp"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/btnRadioYellow"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/no_dimen"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="55dp"
                        android:layout_weight="1" />
                </RadioGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/sendFirstAnswerMaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/large_margin"
                android:layout_marginVertical="@dimen/medium_margin"
                android:background="@drawable/custom_button"
                android:hint="@string/send_answer"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>