<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/quiz_gradient_background"
        tools:context=".fragments.quiz.EndOfQuizFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/xxlarge_width_height"
            android:layout_height="@dimen/xxlarge_width_height"
            android:layout_margin="@dimen/xsmall_margin_image"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:contentPadding="@dimen/content_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/winOrLose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WIN"
                    android:textSize="@dimen/text_size_xxbig"
                    android:textColor="@color/teal_200"
                    android:paddingTop="@dimen/xsmal_padding_top_bot"
                    android:paddingBottom="@dimen/xsmal_padding_top_bot"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/quizUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:textSize="@dimen/text_size_xbig"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/winOrLose"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="category"
                    android:textSize="@dimen/text_size_medium"
                    android:gravity="center"
                    android:layout_below="@id/quizUsername"
                    app:layout_constraintTop_toBottomOf="@+id/quizUsername"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/quizPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Points"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"
                    android:layout_below="@id/category"
                    app:layout_constraintTop_toBottomOf="@id/category"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>