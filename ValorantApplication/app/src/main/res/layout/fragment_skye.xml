<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/xxbig_margin"
        android:background="#ece8e1"
        tools:context=".fragments.info.gameInfo.agents.SkyeFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/imageSkye"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="150dp"
                    android:layout_height="300dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/agent_skye" />

                <TextView
                    android:id="@+id/agentSkye"
                    app:layout_constraintLeft_toRightOf="@id/imageSkye"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/imageSkye"
                    android:text="@string/skye"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/roleSkye"
                    app:layout_constraintLeft_toRightOf="@id/imageSkye"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/agentSkye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/agentSkye"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/imageSkye"
                    android:text="@string/role_initiator"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/biographySkye"
                    app:layout_constraintLeft_toRightOf="@id/imageSkye"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/roleSkye"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/roleSkye"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/imageSkye"
                    android:text="@string/biography_skye"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/specialAbility"
                    app:layout_constraintTop_toBottomOf="@id/imageSkye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/special_abilities"
                    android:textAllCaps="true"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/abilityQSkye"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/specialAbility"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/brimstone_q" />

                <ImageView
                    android:id="@+id/abilityESkye"
                    app:layout_constraintLeft_toRightOf="@id/abilityQSkye"
                    app:layout_constraintTop_toBottomOf="@id/specialAbility"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/brimstone_e" />

                <ImageView
                    android:id="@+id/abilityCSkye"
                    app:layout_constraintLeft_toRightOf="@id/abilityESkye"
                    app:layout_constraintTop_toBottomOf="@id/specialAbility"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/brimstone_c" />

                <ImageView
                    android:id="@+id/abilityXSkye"
                    app:layout_constraintLeft_toRightOf="@id/abilityCSkye"
                    app:layout_constraintTop_toBottomOf="@id/specialAbility"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/brimstone_x" />

                <TextView
                    android:id="@+id/txtNameAbilitySkye"
                    app:layout_constraintTop_toBottomOf="@id/abilityESkye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtAbilitySkye"
                    app:layout_constraintTop_toBottomOf="@id/txtNameAbilitySkye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <VideoView
                    android:id="@+id/videoSkyeAbilities"
                    app:layout_constraintTop_toBottomOf="@id/txtAbilitySkye"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="10dp" />

                <Space
                    app:layout_constraintTop_toBottomOf="@id/videoSkyeAbilities"
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>