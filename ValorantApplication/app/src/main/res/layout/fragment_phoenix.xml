<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/xxbig_margin"
        android:background="#ece8e1"
        tools:context=".fragments.info.gameInfo.agents.PhoenixFragment">

        <ScrollView
            android:id="@+id/scrollPhoenix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/imagePhoenix"
                    android:layout_width="150dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/agent_phoenix"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/agentPhoenix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/imagePhoenix"
                    android:text="@string/phoenix"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/imagePhoenix"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/rolePhoenix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/agentPhoenix"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/imagePhoenix"
                    android:text="@string/role_duelist"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toRightOf="@id/imagePhoenix"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/agentPhoenix" />

                <TextView
                    android:id="@+id/biographyPhoenix"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rolePhoenix"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/imagePhoenix"
                    android:text="@string/biography_phoenix"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toRightOf="@id/imagePhoenix"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rolePhoenix" />

                <TextView
                    android:id="@+id/specialAbilityPhoenix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/special_abilities"
                    android:textAllCaps="true"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/imagePhoenix" />

                <ImageView
                    android:id="@+id/abilityQPhoenix"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/phoenix_q"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/specialAbilityPhoenix" />

                <ImageView
                    android:id="@+id/abilityEPhoenix"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/phoenix_e"
                    app:layout_constraintLeft_toRightOf="@id/abilityQPhoenix"
                    app:layout_constraintTop_toBottomOf="@id/specialAbilityPhoenix" />

                <ImageView
                    android:id="@+id/abilityCPhoenix"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/phoenix_c"
                    app:layout_constraintLeft_toRightOf="@id/abilityEPhoenix"
                    app:layout_constraintTop_toBottomOf="@id/specialAbilityPhoenix" />

                <ImageView
                    android:id="@+id/abilityXPhoenix"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/phoenix_x"
                    app:layout_constraintLeft_toRightOf="@id/abilityCPhoenix"
                    app:layout_constraintTop_toBottomOf="@id/specialAbilityPhoenix" />

                <TextView
                    android:id="@+id/txtNameAbilityPhoenix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/abilityEPhoenix" />

                <TextView
                    android:id="@+id/txtAbilityPhoenix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/txtNameAbilityPhoenix" />

                <VideoView
                    android:id="@+id/videoPhoenixAbilities"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/txtAbilityPhoenix" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    app:layout_constraintTop_toBottomOf="@id/videoPhoenixAbilities" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>